<Page x:Class="WPFView.NavigatorPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WPFView"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Page1">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Click="OnManageCustomers" Width="250" Content="Manage Customers" VerticalAlignment="Center" Margin="0 0 0 10"/>
            <Button Click="OnManageCars" Width="250" Content="Manage Cars" VerticalAlignment="Center" Margin="0 0 0 10"/>
            <Button Click="OnManageRentingTransactions" Content="Manage Renting Transactions" Width="250" VerticalAlignment="Center"  Margin="0 0 0 10"/>
          
            <StackPanel Orientation="Horizontal" Margin="0 10 0 10">
                <DatePicker Name="StartDate" Margin="0 0 10 0"/>
                <DatePicker Name="EndDate"/>
            </StackPanel>
            <Button Click="OnGenerateStatistic" Content="Generate Stastistic" Width="250"/>
        </StackPanel>
    </Grid>
</Page>
