<Page x:Class="WPFView.SignInPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WPFView"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="400"
      Title="Page1">

    <Grid>
        <StackPanel VerticalAlignment="Center">
            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                <Label Content="Email" Width="100" VerticalAlignment="Center"/>
                <TextBox Name="EmailTextBox" Width="150" VerticalAlignment="Center"/>
            </StackPanel>
            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                <Label Content="Password" Width="100" VerticalAlignment="Center"/>
                <PasswordBox Name="PasswordBox" Width="150" VerticalAlignment="Center"/>
            </StackPanel>
            <StackPanel Margin="0 20 0 0" HorizontalAlignment="Center" Orientation="Horizontal" Width="250" FlowDirection ="RightToLeft">
                <Button Click="OnCancel" Content="Cancel" Width="75" Margin="0 0 20 0"/>
                <Button Click="OnSignIn" Content="Sign In" Width="75"   />
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
